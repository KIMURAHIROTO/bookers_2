 <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'books/list', book: @book,user: @user %>
    <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Book detail</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>

          <tr>
            <td><%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg" , :size =>'40x40' %>
            <% end %><br>
            <%= link_to @user.name, user_path(@user) %>
            </td>
            <td><%= link_to @book_find.title, book_path %></td>
            <td><%= @book_find.body %></td>
            <td><% if @user.id == current_user.id %>
              <%= link_to "Edit", edit_book_path(@book_find) ,class: "btn btn-sm btn-success" %>
              <%= link_to "Destroy", book_path(@book_find.id), method: :delete, "data confirm"=>"本当に消しますか？", class: "btn btn-sm btn-danger" %>
            <% end %></td>
            <% if @book_find.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(@book_find), method: :delete do %>
                  ♥<%= @book_find.favorites.count %> いいね
                <% end %>
              </td>
              <% else %>
              <td>
                <%= link_to book_favorites_path(@book_find), method: :post do %>
                  ♡<%= @book_find.favorites.count %> いいね
                <% end %>
              </td>
          　   <% end %>
              <td>コメント件数：<%= @book_find.book_comments.count %></td>
          </tr>
        </tbody>
      </table>


          <table>

            <% @book_find.book_comments.each do |book_comment| %>
              <tr>
                <td><%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg" , :size =>'40x40' %>
                <br><%= link_to book_comment.user.name, user_path(book_comment.user) %></td>
                <td><%= book_comment.comment %></td>
                <td>
                  <% if book_comment.user == current_user %>
                  <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, "data confirm"=>"本当に消しますか？", class: "btn btn-sm btn-danger"%>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </table>
              <%= form_with(model:[@book_find, @book_comment], local: true) do |f| %>
              <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
              <%= f.submit "送信する" %>
            <% end %>




    </div>
