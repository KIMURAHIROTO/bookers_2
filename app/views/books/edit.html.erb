<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <% if @book.errors.any? %>
          <%= @book.errors.count %> errors prohibited this obj from being saved:
          <% @book.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
      <% end %>
      <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <tr>title<tr>
      <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"title"%>

      <tr>Opinion</tr>
      <%= f.text_field :body, autofocus: true, id:"inputbody", placeholder:"Opinion"%>
      <%= f.submit "Update Book" %>
      <% end %><br>
      <%= link_to "Show | ", book_path %>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>