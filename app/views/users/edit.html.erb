
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @user.errors.any? %>
          <%= @user.errors.count %> errors prohibited this obj from being saved:
          <% @user.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
      <% end %>
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
           
          <label for="inputImage">Image</label><br>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
          <%= f.attachment_field :profile_image, placeholder: "Image" %><br>
          
          <label for="inputIntroduction">Introduction</label><br>
          <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"説明"%>
          <%= f.submit "Update User", class:"btn btn-secondary" %><br>
        <% end %>
    </div>
  </div>
</div>

    